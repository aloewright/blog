# Server
HOST=0.0.0.0
PORT=1337

# Secrets
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified
JWT_SECRET=toBeModified

# Database
DATABASE_CLIENT=postgres
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_SSL=false

# For Vercel Postgres (uncomment and use your connection string)
# DATABASE_URL=postgres://username:password@host:port/database

# Media Search APIs
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
LOTTIE_API_KEY=your-lottie-api-key-optional

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com

# Alternative: Google Cloud Storage Configuration (comment out R2 and uncomment these)
# GCS_SERVICE_ACCOUNT=your-service-account-json-base64
# GCS_BUCKET_NAME=your-gcs-bucket-name
# GCS_BASE_URL=https://storage.googleapis.com/your-bucket-name
